<% if @user.errors.any? %>
  <div id="errors">
    <h3>There are<%=  pluralize(@user.errors.count, "error") %> in the form</h3>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@user do |form|%>
    <%= form.label "Username:"%>
    <%= form.text_field :username, :value => "default_username"%></br>
    <%= form.label "Password:"%>
    <%= form.password_field :password %></br>
    <%= form.label "Email:"%>
    <%= form.text_field :email, placeholder:"example@example.com"%></br>

    <%= form.submit %>
<% end %>